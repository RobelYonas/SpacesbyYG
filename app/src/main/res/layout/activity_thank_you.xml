<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Thank You Message -->
    <TextView
        android:id="@+id/thankYouTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Description Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your booking request has been sent to the admin. You will receive a confirmation reply shortly."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Buttons for Exit and Re-book -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <!-- Re-book Button -->
        <Button
            android:id="@+id/rebookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-book"
            android:layout_marginEnd="16dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <!-- Exit Button -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:minHeight="48dp"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>
