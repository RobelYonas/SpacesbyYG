<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Name Field -->
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- Surname Field -->
    <EditText
        android:id="@+id/userSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- Company Field -->
    <EditText
        android:id="@+id/userCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company/Organization"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- Phone Number Field -->
    <EditText
        android:id="@+id/userPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitBookingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Booking"
        android:minHeight="48dp"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backToTimeCalendarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Time and Calendar"
        android:minHeight="48dp"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
