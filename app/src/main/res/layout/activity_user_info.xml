<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#232323">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Din Information"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"/>

    <!-- Input Fields with Dark Background -->
    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Förnamn"
        android:backgroundTint="#444444"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Efternamn"
        android:backgroundTint="#444444"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Företag"
        android:backgroundTint="#444444"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*E-Post"
        android:backgroundTint="#444444"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Mobil"
        android:backgroundTint="#444444"
        android:textColorHint="#888888"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif"
        android:inputType="phone"/>

    <!-- Confirm Button with Green Background -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bekrefte"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6FBF73"
        android:padding="12dp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"/>
</LinearLayout>
