<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Days of the week, horizontally aligned -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sundayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/mondayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/tuesdayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/wednesdayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/thursdayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/fridayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/saturdayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Time slots, hidden initially -->
    <LinearLayout
        android:id="@+id/timeSlotLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/morningSlotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 - 12:00"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/afternoonSlotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:00 - 18:00"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Continue button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:enabled="false" />

    <!-- Back to Rooms button -->
    <Button
        android:id="@+id/backToRoomsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Rooms"
        android:layout_marginTop="16dp"
        android:minHeight="48dp" />
</LinearLayout>
